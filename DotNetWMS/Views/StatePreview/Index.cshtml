@model IEnumerable<DotNetWMS.Models.Item>

@{
    ViewData["Title"] = "StatePreview";
}

<h1><a asp-controller="Home" asp-action="Index" class="btn btn-danger"><i class="fas fa-arrow-left"></i></a> Podgląd stanu</h1>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Podgląd stanu</title>

</head>
<body>
    <div class="form-group">
        <label class="control-label"></label>
        <select class="form-control" name="filter" asp-items="ViewBag.State"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Podgląd" class="btn btn-primary" />
    </div>
    <br>
    <form asp-action="Index" method="get">
        <div class="form-group">
            <p>
                Wyszukaj: <input type="text" name="search" value="@ViewData["Search"]" />
                <button type="submit" class="btn btn-primary"><i class="fab fa-sistrix"></i></button> |
                <a asp-action="Index" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
            </p>
        </div>
    </form>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Units)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WarrantyDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Warehouse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.External)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Units)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WarrantyDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Warehouse.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.External.Name)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</body>
</html>
