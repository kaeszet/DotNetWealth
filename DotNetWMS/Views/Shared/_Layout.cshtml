@using DotNetWMS.Resources
@inject SignInManager<WMSIdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNetFortune</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    </environment>

</head>
<body class="min-vh-100">

    @if (signInManager.IsSignedIn(User))
    {
        <header class="sticky-top top-0">
            <div class="container-fluid">
                <div class="row p-0">
                    <div class="col-md-2 d-flex bg-white">
                        <a class="navbar-brand m-auto" asp-controller="Home" asp-action="Index">
                            <img src="~/images/PepeLogo.png" style="width: 160px" alt="">
                        </a>
                    </div>

                    <div class="col-md-10 shadow navbar navbar-expand-lg navbar-dark bg-dark">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarText">
                            <ul class="navbar-nav mr-auto">

                                <!--kadry-->
                                @if (signInManager.IsSignedIn(User) && User.IsInAnyRoles("Kadry,Moderator"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Employees" asp-action="Index">Pracownicy</a>
                                    </li>
                                }

                                <!--standard-->
                                @if (signInManager.IsSignedIn(User))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Items" asp-action="Index">Majątek</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Warehouses" asp-action="Index">Magazyny</a>
                                    </li>
                                }

                                @if (signInManager.IsSignedIn(User) && User.IsInAnyRoles("Standard,StandardPlus,Moderator"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Externals" asp-action="Index">Klienci zewnętrzni</a>
                                    </li>
                                }

                            </ul>

                            <div class="dropdown">
                                <a class="btn btn-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name
                                </a>

                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="dropdownMenuLink">
                                        <h6 class="dropdown-header">Panel administracyjny</h6>
                                        @*admin*@
                                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                        {
                                            <a asp-controller="Administration" asp-action="ListOfRoles" class="dropdown-item">Lista ról</a>
                                            <a asp-controller="Administration" asp-action="ListOfUsers" class="dropdown-item">Użytkownicy</a>
                                            <div class="dropdown-divider"></div>
                                        }
                                        <button type="submit" class="dropdown-item text-danger">Wyloguj się</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
    }



    @if (!signInManager.IsSignedIn(User))
    {
        <div class="container-fluid vh-100 d-flex bg-light">
            @RenderBody()
        </div>
    }
    else
    {
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar bg-light border-right">

            </div>
            <div class="col-md-10 ml-auto py-3">
                @RenderBody()
            </div>
        </div>
    </div>
    }
    <partial name="_CookieConsentPartial" />

    @*<footer class="footer bg-light py-3 text-center shadow border fixed-bottom">
            <div class="container">
                &copy; 2019-2020 - DotNetFortune - <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="aboutUs">O nas</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    </body>
</html>
