@using DotNetWMS.Resources
@inject SignInManager<WMSIdentityUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNetFortune</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    </environment>

</head>
<body>
        <header class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/images/PepeLogo.png" style="height: 54px; width: 160px" alt=""></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">

                    <!--admin-->
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Panel Administracyjny
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a asp-controller="Administration" asp-action="ListOfRoles" class="dropdown-item">Lista ról</a>
                                <a asp-controller="Administration" asp-action="ListOfUsers" class="dropdown-item">Użytkownicy</a>
                            </div>
                        </li>
                    }
                    <!--kadry-->
                    @if (signInManager.IsSignedIn(User) && User.IsInAnyRoles("Kadry,Moderator"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employees" asp-action="Index">Pracownicy</a>
                        </li>
                    }

                    <!--standard-->
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Items" asp-action="Index">Majątek</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Warehouses" asp-action="Index">Magazyny</a>
                        </li>
                    }

                    @if (signInManager.IsSignedIn(User) && User.IsInAnyRoles("Standard,StandardPlus,Moderator"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Externals" asp-action="Index">Kl. zewnętrzni</a>
                        </li>
                    }

                </ul>
                
                @if (signInManager.IsSignedIn(User))
                {


                        <form class="logout-form" method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="nav-link btn btn-link py-0">Wyloguj się<br/> <b>@User.Identity.Name</b></button>
                        </form>
                }
                else
                {
                    <div>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success mr-1">Zaloguj się</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-info">Zarejestruj się</a>
                    </div>
                }
                </div>

            
    </header>


    <div class="container-fluid">
        <div class="container container-main py-3">
            @RenderBody()
        </div>
    </div>


    <footer class="footer bg-light">
        <div class="container">
            &copy; 2019-2020 - DotNetFortune - <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="aboutUs">O nas</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
