@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Assign_to_warehouse_confirm";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Przypisz do magazynu</h2>
    </div>
</div>
<hr />
<div class="mb-3">
    <a asp-action="Assign_to_warehouse" class="btn btn-sm btn-outline-dark"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

    <form asp-action="Assign_to_warehouse_confirm" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Producer" class="control-label"></label>
            <input asp-for="Producer" class="form-control" readonly />
            <span asp-validation-for="Producer" class="text-danger"></span>
        </div>

        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" readonly />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" readonly />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

        </div>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label asp-for="ItemCode" class="control-label"></label>
                <input asp-for="ItemCode" class="form-control" readonly />
                <span asp-validation-for="ItemCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input type="number" step="0.01" asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Units" class="control-label"></label>
                <select asp-for="Units" class="form-control" asp-items="Html.GetEnumSelectList<ItemUnits>()" disabled></select>
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="WarrantyDate" />
            <input type="hidden" asp-for="State" />
        </div>

        <hr />
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="WarehouseId" class="control-label"></label>
                <select asp-for="WarehouseId" class="form-control" data-title="Brak" asp-items="ViewBag.WarehouseId"></select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="ExternalId" />
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-sm btn-success">Zapisz<i class="fas fa-save ml-1"></i></button>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
