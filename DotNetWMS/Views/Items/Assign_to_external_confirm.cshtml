@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Assign_to_external_confirm";
}


<div class="card border-dark mb-3">
    <div class="card-header"><h4>Przypisz do klienta zewnętrznego</h4></div>
    <div class="card-body text-dark">


        <form asp-action="Assign_to_external_confirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Producer" class="control-label"></label>
                <input asp-for="Producer" class="form-control" readonly />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>

            <div class="form-row">

                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" readonly />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" readonly />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="ItemCode" class="control-label"></label>
                    <input asp-for="ItemCode" class="form-control" readonly />
                    <span asp-validation-for="ItemCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-md-10">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Units" class="control-label"></label>
                    <select asp-for="Units" class="form-control" asp-items="Html.GetEnumSelectList<ItemUnits>()" disabled></select>
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="WarrantyDate" />
                <input type="hidden" asp-for="State" />
            </div>

            <hr />
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="ExternalId" class="control-label"></label>
                    <select asp-for="ExternalId" class="form-control" asp-items="ViewBag.ExternalId"><option value="" selected>Brak</option></select>
                    <span asp-validation-for="ExternalId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="WarehouseId" />
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-success">Zapisz <i class="fas fa-save"></i></button>
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Assign_to_external" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/CustomValidation.js"></script>
}

