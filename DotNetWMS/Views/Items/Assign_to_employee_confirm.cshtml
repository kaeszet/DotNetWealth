@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Assign_to_employee_confirm";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Przypisz do pracownika</h2>
    </div>
</div>
<hr />
<div class="mb-3">
    <a asp-action="Assign_to_employee" class="btn btn-sm btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

    <form asp-action="Assign_to_employee_confirm">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Producer" class="font-weight-bold small mb-0"></label>
            <input asp-for="Producer" class="form-control" readonly />
            <span asp-validation-for="Producer" class="text-danger"></span>
        </div>

        <div class="form-row">

            <div class="form-group col-md-4">
                <label asp-for="Name" class="font-weight-bold small mb-0"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Type" class="font-weight-bold small mb-0"></label>
                <input asp-for="Type" class="form-control" readonly />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Model" class="font-weight-bold small mb-0"></label>
                <input asp-for="Model" class="form-control" readonly />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="ItemCode" class="font-weight-bold small mb-0"></label>
                <input asp-for="ItemCode" class="form-control" readonly />
                <span asp-validation-for="ItemCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">

            <div class="form-group col-md-10">
                <label asp-for="Quantity" class="font-weight-bold small mb-0"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Units" class="font-weight-bold small mb-0"></label>
                <select asp-for="Units" class="form-control" asp-items="Html.GetEnumSelectList<ItemUnits>()" disabled></select>
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="WarrantyDate" />
            <input type="hidden" asp-for="State" />
        </div>

        <hr />
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="EmployeeId" class="font-weight-bold small mb-0"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"><option value="" selected>Brak</option></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="WarehouseId" />
            <input type="hidden" asp-for="ExternalId" />
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-save mr-1"></i>Zapisz</button>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
