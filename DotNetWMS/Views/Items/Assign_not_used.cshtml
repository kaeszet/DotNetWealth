@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Assign";
    
}

<h1>Assign</h1>

<form asp-action="Assign">
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Type" />
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <select asp-for="Id" class="form-control" asp-items="ViewBag.ItemAssign"><option disabled selected>Brak</option></select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label"></label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"><option disabled selected>Brak</option></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

