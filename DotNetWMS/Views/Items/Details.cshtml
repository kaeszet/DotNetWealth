@using DotNetWMS.Resources
@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="my-0">Szczegóły o produkcie</h2>
        @if (User.IsInAnyRoles("StandardPlus,Moderator"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><i class="fas fa-edit mr-1"></i> Edytuj</a>
        }
    </div>
</div>
<hr />

<div class="card mb-3">
    <div class="card-body">
        <a asp-action="Index" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>
           
        <div class="row">
            <div class="col-md-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.Name) | @Html.DisplayNameFor(model => model.Type) | @Html.DisplayNameFor(model => model.Model)</li>
                    <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Name) | @Html.DisplayFor(model => model.Type) | @Html.DisplayFor(model => model.Model)</li>

                    <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.Producer)</li>
                    <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Producer)</li>

                    <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.ItemCode)</li>
                    <li class="list-group-item pl-5">@Html.DisplayFor(model => model.ItemCode)</li>

                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.WarrantyDate)</li>
                    <li class="list-group-item pl-5">@Html.DisplayFor(model => model.WarrantyDate)</li>

                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.Warehouse)</li>
                    <li class="list-group-item pl-5"> @Html.DisplayFor(model => model.Warehouse.Street)</li>
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.Quantity) / @Html.DisplayNameFor(model => model.Units)</li>
                    <li class="list-group-item pl-5"> @Html.DisplayFor(model => model.Quantity) / @Html.DisplayFor(model => model.Units)</li>

                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.State)</li>
                    <li class="list-group-item pl-5"> @Html.DisplayFor(model => model.State)</li>

                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.External)</li>
                    <li class="list-group-item pl-5">@Html.DisplayFor(model => model.External.Name)</li>

                    <li class="list-group-item font-weight-bold"> @Html.DisplayNameFor(model => model.Employee)</li>
                    <li class="list-group-item pl-5"> @Html.DisplayFor(model => model.Employee.FullName)</li>
                </ul>
            </div>
        </div>
    </div>
</div>
