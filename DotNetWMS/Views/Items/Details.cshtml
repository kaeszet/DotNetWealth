@using DotNetWMS.Resources
@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Details";
}

    <div>
        <h4>Szczegóły o produkcie</h4>
        @if (User.IsInAnyRoles("StandardPlus,Moderator"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edytuj</a>
        }
        <hr />
        <dl class="row details-view">
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Producer)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Producer)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.ItemCode)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.ItemCode)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Units)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Units)
            </dd>
