            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.WarrantyDate)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Employee.FullName)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.Warehouse)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.Warehouse.Street)
            </dd>
            <dt class="col-sm-2 list-group-item">
                @Html.DisplayNameFor(model => model.External)
            </dt>
            <dd class="col-sm-10 list-group-item dd-list">
                @Html.DisplayFor(model => model.External.Name)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>
    </div>
