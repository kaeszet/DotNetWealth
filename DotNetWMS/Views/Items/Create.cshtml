@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Dodawanie produktu</h2>
    </div>
</div>
<hr />
<div class="card mb-3">
    <div class="card-body text-dark">
        <a asp-action="Index" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Edit" class="mt-3">
            <div class="form-group">
                <label asp-for="Producer" class="font-weight-bold small mb-0"></label>
                <input asp-for="Producer" class="form-control" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>

            <div class="form-row">

                <div class="form-group col-md-4">
                    <label asp-for="Name" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Type" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Model" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ItemCode" class="font-weight-bold small mb-0"></label>
                    <input asp-for="ItemCode" class="form-control" />
                    <span asp-validation-for="ItemCode" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="State" class="font-weight-bold small mb-0"></label>
                    <select asp-for="State" class="form-control" asp-items="Html.GetEnumSelectList<ItemState>()"></select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label asp-for="WarrantyDate" class="font-weight-bold small mb-0"></label>
                    <input asp-for="WarrantyDate" class="form-control" />
                    <span asp-validation-for="WarrantyDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Quantity" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Units" class="font-weight-bold small mb-0"></label>
                    <select asp-for="Units" class="form-control" asp-items="Html.GetEnumSelectList<ItemUnits>()"></select>
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="EmployeeId" class="font-weight-bold small mb-0"></label>
                    <select asp-for="EmployeeId" class="form-control" 
                            title="Brak"
                            asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="WarehouseId" class="font-weight-bold small mb-0"></label>
                    <select asp-for="WarehouseId" class="form-control" 
                            title="Brak"
                            asp-items="ViewBag.WarehouseId"></select>
                    <span asp-validation-for="WarehouseId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ExternalId" class="font-weight-bold small mb-0"></label>
                    <select asp-for="ExternalId" class="form-control" 
                            title="Brak"    
                            asp-items="ViewBag.ExternalId"></select>
                    <span asp-validation-for="ExternalId" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm mr-1"><i class="fas fa-plus mr-1"></i>Dodaj</button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
