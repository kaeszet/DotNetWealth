@model DotNetWMS.Models.Item

@{
    ViewData["Title"] = "Create";
}

<div class="card border-dark mb-3">
    <div class="card-header"><h4>Dodawanie produktu</h4></div>
    <div class="card-body text-dark">


        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Producer" class="control-label"></label>
                <input asp-for="Producer" class="form-control" />
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>

            <div class="form-row">

                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ItemCode" class="control-label"></label>
                    <input asp-for="ItemCode" class="form-control" />
                    <span asp-validation-for="ItemCode" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="State" class="control-label"></label>
                    <select asp-for="State" class="form-control" asp-items="Html.GetEnumSelectList<ItemState>()"></select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <label asp-for="WarrantyDate" class="control-label"></label>
                    <input asp-for="WarrantyDate" class="form-control" />
                    <span asp-validation-for="WarrantyDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Units" class="control-label"></label>
                    <select asp-for="Units" class="form-control" asp-items="Html.GetEnumSelectList<ItemUnits>()"></select>
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
            </div>

            <hr />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"><option value="" selected>Brak</option></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="WarehouseId" class="control-label"></label>
                    <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"><option value="" selected>Brak</option></select>
                    <span asp-validation-for="WarehouseId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ExternalId" class="control-label"></label>
                    <select asp-for="ExternalId" class="form-control" asp-items="ViewBag.ExternalId"><option value="" selected>Brak</option></select>
                    <span asp-validation-for="ExternalId" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-success">Dodaj <i class="fas fa-plus"></i></button>
            </div>
        </form>

    </div>
</div>


<a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
