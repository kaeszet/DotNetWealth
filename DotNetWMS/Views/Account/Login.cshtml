@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

    <form method="post" class="form-signin">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="text-center">
            <img src="~/images/PepeLogo.png" style="height: 40%; width: 40%" alt="">
            <h1 class="h3 mb-3 font-weight-normal">Logowanie</h1>
        </div>
        <div class="form-group">
            <label asp-for="Login" class="sr-only">Login</label>
            <input asp-for="Login" id="inputEmail" class="form-control" placeholder="Login" required autofocus>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="sr-only">Hasło</label>
            <input asp-for="Password" id="inputPassword" class="form-control" placeholder="Hasło" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox mb-3">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" type="checkbox"> @Html.DisplayNameFor(r => r.RememberMe)
                </label>
            </div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Zaloguj</button>
    </form>