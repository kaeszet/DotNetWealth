@model LoginViewModel

@{
    ViewBag.Title = "Logowanie";
}

    <div class="card border-0 m-auto bg-transparent">
        <div class="card-body">
            <div class="mx-auto mb-3" style="max-width: 500px;">
                <img src="~/images/logo3.png" class="mw-100 mh-100" alt="">
            </div>
            <h3 class="text-center font-weight-bold my-4">Logowanie</h3>
            <div asp-validation-summary="All" class="text-danger small font-weight-bold"></div>
            <form method="post" class="form-signin">
                <div class="form-group">
                    <input asp-for="Login" id="inputEmail" class="form-control login" placeholder="Login">
                    <span asp-validation-for="Login" class="small text-danger font-weight-bold"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" id="inputPassword" class="form-control login" placeholder="Hasło" required>
                    <span asp-validation-for="Password" class="small text-danger font-weight-bold"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox text-center">
                        <input asp-for="RememberMe" type="checkbox" id="remember" class="custom-control-input" />
                        <label asp-for="RememberMe" for="remember" class="custom-control-label" style="font-size: 100% !important; font-weight:normal;"></label>
                    </div>
                </div>
                <div class="d-flex flex-column mb-2">
                    <button class="btn btn-primary d-block mb-2" type="submit">Zaloguj</button>
                    <a asp-action="ForgotPassword" class="btn btn-sm btn-outline-dark m-auto">Zapomniałeś hasła?</a>
                    <div class="card-body text-center">
                        <p class="mb-1">Nie masz jeszcze konta?</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-outline-dark">Zarejestruj się</a>
                    </div>
                </div>
            </form>

            <p class="text-muted m-auto text-center">&copy; 2019-2020</p>
            <div class="d-flex justify-content-center">
                <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="btn-link">O nas</a>
            </div>
        </div>
    </div>
