@model DotNetWMS.Models.Department

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Dodawanie stanowiska</h2>
    </div>
</div>
<hr />
<div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>
        <div asp-validation-summary="ModelOnly" class="text-danger small font-weight-bold"></div>

        <form asp-action="Create" class="mt-3">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small font-weight-bold"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-plus mr-1"></i>Dodaj</button>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
