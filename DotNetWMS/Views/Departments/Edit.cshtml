@model DotNetWMS.Models.Department

@{
    ViewData["Title"] = "Edycja stanowiska";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">@ViewData["Title"]</h2>
    </div>
</div>
<hr />
<div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>

        <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
        <form asp-action="Edit" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" ></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-plus mr-1"></i>Zapisz</button>
            </div>
        </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
