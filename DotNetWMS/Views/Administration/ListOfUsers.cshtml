@model IEnumerable<WMSIdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>Użytkownicy</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary mb-3"><i class="fas fa-user-plus"></i> Dodaj użytkownika</a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                ID użytk. : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                    <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edytuj</a>
                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span>Jesteś pewien?</span>
                        <button type="submit" class="btn btn-danger">Potwierdź</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id', false)">Anuluj</a>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.Id', true)">Usuń</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Brak użytkowników
        </div>
        <div class="card-body">
            <h5 class="card-title">Aby stworzyć użytkownika, kliknij poniżej:</h5>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary"><i class="fas fa-user-plus"></i> Dodaj użytkownika</a>
        </div>
    </div>
}
@section Scripts {
    <script src="~/js/DeleteConfirmation.js"></script>
}
