@model IEnumerable<WMSIdentityUser>

@{
    ViewBag.Title = "All Users";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Użytkownicy</h2>
        <a asp-action="Register" asp-controller="Account" class="btn btn-success my-auto"><i class="fas fa-user-plus mr-1"></i>Dodaj użytkownika</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-12">
        @if (Model.Any())
        {
            var index = 1;

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="bg-light">
                            <th scope="col">#</th>
                            <th scope="col">Nazwa</th>
                            <th scope="col">ID</th>
                            <th scope="col">Imię</th>
                            <th scope="col">Nazwisko</th>
                            <th scope="col">Identyfikator</th>
                            <th scope="col">Oddział</th>
                            <th scope="col">Email</th>
                            <th scope="col">Akcja</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <th scope="row">@index</th>
                                <td>@user.UserName</td>
                                <td>@user.Id</td>
                                <td>@user.Name</td>
                                <td>@user.Surname</td>
                                <td>@user.EmployeeNumber</td>
                                <td>@user.City</td>
                                <td>@user.Email</td>
                                <td>
                                    <form method="post" asp-action="DeleteUser" asp-route-id="@user.Id">
                                        <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning my-1 btn-sm"><i class="fas fa-edit mr-1"></i>Edytuj</a>
                                        <span id="confirmDeleteSpan_@user.Id" style="display:none">
                                            <span><b>Jesteś pewien?</b></span>
                                            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-check-circle"></i></button>
                                            <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('@user.Id', false)"><i class="fas fa-window-close"></i></a>
                                        </span>
                                        <span id="deleteSpan_@user.Id">
                                            <a href="#" class="btn btn-danger my-1 btn-sm" onclick="confirmDelete('@user.Id', true)"><i class="fas fa-trash-alt mr-1"></i>Usuń</a>
                                        </span>
                                    </form>
                                </td>
                            </tr>

                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <h4 class="alert-heading">Brak użytkowników!</h4>
                <hr>
                <p class="mb-0">Aby dodać nowego użytkownika, kliknij powyższy przycisk "Dodaj użytkownika"</p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script src="~/js/DeleteConfirmation.js"></script>
}
