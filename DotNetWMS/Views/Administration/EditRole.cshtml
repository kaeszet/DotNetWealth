@using DotNetWMS.Resources;
@model Admin_EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edytuj rolę</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @if (Admin_DefaultRoles.IsDefaultRole(Model.RoleName))
            {
                <input asp-for="RoleName" disabled class="form-control">
            }
            else
            {
                <input asp-for="RoleName" class="form-control">
            }
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            @if (!(Admin_DefaultRoles.IsDefaultRole(Model.RoleName)))
            {
                <button type="submit" class="btn btn-primary">Uaktualnij</button>
            }
            <a asp-action="ListOfRoles" class="btn btn-primary">Powrót</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Użytkownicy</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Brak użytkowników posiadających tą rolę</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Zarządzaj użytkownikami</a>
        </div>
    </div>
</form>