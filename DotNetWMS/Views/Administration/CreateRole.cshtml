@model Admin_CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}


<div class="card border-dark mb-3">
    <div class="card-header"><h4>Stwórz rolę</h4></div>
    <div class="card-body text-dark">


        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Stwórz <i class="fas fa-plus"></i></button>
            </div>
        </form>

    </div>
</div>


<a asp-action="ListOfRoles" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i> Wróć do listy ról</a>

