@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0 text-sm-left text-center w-100">Wybierz rolę dla użytkownika</h2>
    </div>
</div>
<hr />
<div class="mb-3">
    <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-outline-dark btn-sm mb-2"><i class="fas fa-arrow-left mr-1"></i>Wróć do edycji konta</a>
    <form method="post">
        <div class="row">
            <div class="col-6">
                <ul class="list-group list-group-flush">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <li class="list-group-item">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <div class="custom-control custom-checkbox">
                                <input asp-for="@Model[i].IsSelected" data-type="@Model[i].RoleName" type="checkbox" class="custom-control-input role-manage" type="checkbox">
                                <label class="custom-control-label c-pointer" asp-for="@Model[i].IsSelected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        </li>
                    }
                </ul>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            <div class="col-12">
                <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-plus mr-1"></i>Zaktualizuj</button>
            </div>
        </div>
</form>
</div>
