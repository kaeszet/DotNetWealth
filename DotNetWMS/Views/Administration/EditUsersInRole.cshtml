@model List<Admin_UsersInRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Przypisz użytkowników do ról</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                <span asp-validation-for="@Model[i].IsSelected" class="text-danger"></span>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Zaktualizuj" class="btn btn-primary"/>
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Wstecz</a>
        </div>
    </div>
</form>
