@model List<Admin_UsersInRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}
<div>
    <h2 class="text-sm-left text-center">Przypisz użytkowników do roli</h2>
</div>
<hr />
<div class="mb-3">
        <div class="d-flex flex-column align-items-start">
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Szczegóły</a>
            <a asp-action="ListOfRoles" class="btn btn-outline-dark btn-sm my-2"><i class="fas fa-arrow-left mr-1"></i>Wróć do listy ról</a>
        </div>
        <form method="post" class="form-edit-role">
            <h4 class="mt-3">Użytkownicy</h4>
            <div class="row m-0 border-top border-left">

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="col-md-6 border-bottom border-right">
                        <div class="custom-control custom-checkbox py-2">
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].UserName" />
                            <input type="hidden" asp-for="@Model[i].FullName" />
                            <input type="hidden" asp-for="@Model[i].EmployeeNumber" />
                            <input class="custom-control-input" asp-for="@Model[i].IsSelected">
                            <label class="custom-control-label" asp-for="@Model[i].IsSelected">@Model[i].UserName (@Model[i].FullName, @Model[i].EmployeeNumber)</label>
                            <span asp-validation-for="@Model[i].IsSelected" class="text-danger small font-weight-bold"></span>
                        </div>
                    </div>
                }

            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-plus mr-1"></i>Zapisz</button>
            </div>
        </form>
</div>

