@model Admin_ChangePasswordViewModel

@{
    ViewBag.Title = "Zmiana hasła";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0 text-sm-left text-center w-100">Zmiana hasła dla @Model.FullName (@Model.Login)</h2>
    </div>
</div>
<hr />
<div class="mb-3">
    @*<a asp-action="ListOfUsers" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do listy użytkowników</a>*@
    <a asp-action="Index" asp-controller="Employees" class="btn btn-outline-danger btn-sm"><i class="fas fa-arrow-left mr-1"></i>Zrezygnuj</a>
    <div asp-validation-summary="All" class="text-danger font-weight-bold small mt-3"></div>
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" disabled class="form-control">
                <input type="hidden" asp-for="FullName" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Login"></label>
                <input asp-for="Login" disabled class="form-control">
                <input type="hidden" asp-for="Login" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control">
                <span asp-validation-for="NewPassword" class="text-danger font-weight-bold small"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control">
                <span asp-validation-for="NewPassword" class="text-danger font-weight-bold small"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="NewPasswordConfirm"></label>
                <input asp-for="NewPasswordConfirm" class="form-control">
                <span asp-validation-for="NewPasswordConfirm" class="text-danger font-weight-bold small"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-plus mr-1"></i>Potwierdź</button>
        </div>
    </form>

</div>
