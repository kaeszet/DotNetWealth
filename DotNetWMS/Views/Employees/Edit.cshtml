@model DotNetWMS.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Edycja pracowników</h2>
    </div>
</div>
<hr />
<div class="card mb-3">
    <div class="card-body">
        <a asp-action="Index" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>
        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold small mt-3"></div>
        <form asp-action="Edit" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Name" class="form-control" placeholder="Imię" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Surname" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Surname" class="form-control" placeholder="Nazwisko" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Pesel" class="font-weight-bold small mb-0"></label>
                <input asp-for="Pesel" class="form-control" placeholder="Pesel" />
                <span asp-validation-for="Pesel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="font-weight-bold small mb-0"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Street" class="font-weight-bold small mb-0"></label>
                    <input asp-for="Street" class="form-control" placeholder="Adres" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="City" class="font-weight-bold small mb-0"></label>
                    <input asp-for="City" class="form-control" placeholder="Miasto" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="ZipCode" class="font-weight-bold small mb-0"></label>
                    <input asp-for="ZipCode" class="form-control" placeholder="Kod Pocztowy" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-plus mr-1"></i>Zapisz</button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
