@model DotNetWMS.Models.Employee

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-danger">Czy na pewno chcesz wykonać to polecenie?</h3>
<div>
    <h2>Usuwanie pracownika</h2>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Usuń</button>
    </form>
    <hr />
    <dl class="row details-view">
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.Pesel)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.Pesel)
        </dd>
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10 list-group-item dd-list">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>

    <a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>
</div>
