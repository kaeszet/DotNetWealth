@model DotNetWMS.Models.Employee

@{
    ViewData["Title"] = "Details";
}


<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Szczegóły</h2>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning my-auto"><i class="fas fa-edit mr-1"></i>Edytuj</a>
    </div>
</div>
<hr />
<div class="card mb-3">
    <div class="card-body">
        <a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>

        <ul class="list-group list-group-flush">
            <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.Name)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Name)</li>

            <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.Surname)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Surname)</li>

            <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.Pesel)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Pesel)</li>

            <li class="list-group-item font-weight-bold">@Html.DisplayFor(model => model.Department.Name)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Department.Name)</li>

            <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.Street)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.Street)</li>

            <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.ZipCode)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.ZipCode)</li>

            <li class="list-group-item font-weight-bold">@Html.DisplayNameFor(model => model.City)</li>
            <li class="list-group-item pl-5">@Html.DisplayFor(model => model.City)</li>
        </ul>
    </div>
</div>