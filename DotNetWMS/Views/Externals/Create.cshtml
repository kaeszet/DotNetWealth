@model DotNetWMS.Models.External

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="d-flex justify-content-between">
        <h2 class="my-0">Dodawanie klienta</h2>
    </div>
</div>
<hr />

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-dark btn-sm"><i class="fas fa-arrow-left mr-1"></i>Wróć do podglądu</a>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Create" class="mt-3">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Type"></label>
                <select asp-for="Type" data-title="Wybierz rodzaj klienta" class="form-control" asp-items="Html.GetEnumSelectList<ContractorType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TaxId"></label>
                <input asp-for="TaxId" class="form-control" />
                <span asp-validation-for="TaxId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label>Adres</label>
            <input id="address" type="search" autocomplete="nope" placeholder="Podaj adres magazynu" class="form-control" />
            <small class="form-text text-muted">Aby poprawnie zlokalizować położenie proszę podać <b>ulicę</b>, <b>numer budynku</b>, <b>miasto</b> oraz <b>kod pocztowy</b> magazynu</small>

            <input type="hidden" id="lat" name="lat" />
            <input type="hidden" id="lng" name="lng" />
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Street"></label>
                <input asp-for="Street" id="street" readonly class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="City"></label>
                <input asp-for="City" id="locality" readonly class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="ZipCode"></label>
                <input asp-for="ZipCode" id="postal_code" readonly class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12">
                <div id="map" style="height:300px; width:100%"></div>
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-plus mr-1"></i>Dodaj</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_GoogleMapsPartial");}
}
