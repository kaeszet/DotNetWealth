@model List<ItemsAssignmentViewModel>
@{
    ViewData["Title"] = "Raport";
}

@if (Model.Any())
{
    <div class="table-responsive">
    <table class="table table-hover table-sm">
        <thead class="thead-light">
            <tr>
                <th>
                    Typ
                </th>
                <th>
                    Nazwa
                </th>
                <th>
                    Producent
                </th>
                <th>
                    Model
                </th>
                <th>
                    Kod
                </th>
                <th>
                    Ilość
                </th>
                <th>
                    Jedn.
                </th>
                <th>
                    Przypisany do:
                </th>
            </tr>
        </thead>
        <tbody id="tableSearch">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Producer
                </td>
                <td>
                    @item.Model
                </td>
                <td>
                    @item.ItemCode
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.Units
                </td>
                <td>
                    <ul class="pl-0" style="list-style:inside; list-style-type: decimal;">
                        @foreach (var occurrence in item.Records)
                        {
                            <li>@occurrence</li>
                        }
                    </ul>
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>
}
else
{
    <h4 class="text-danger font-weight-bold">@ViewData["InfoMessage"]</h4>
}
