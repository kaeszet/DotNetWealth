@model IEnumerable<DotNetWMS.Models.Infobox>

@{
    ViewData["Title"] = "Index";
}

<h1>Skrzynka wiadomości</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceivedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (!item.IsChecked)
            {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedDate)
            </td>
            @if (!item.IsChecked)
            {
                if (item.Title == "Nowy dokument")
                {
                    <td>
                        <a asp-action="Check" asp-route-id="@item.Id">Potwierdź</a>
                    </td>
                    <td>
                        <a asp-controller="Doc_Assignments" asp-action="ShowDocument" asp-route-id="@item.DocumentId">Sprawdź</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Check" asp-route-id="@item.Id">Przyczytane</a>
                    </td>
                }

            }
        </tr>

            }

        }
    </tbody>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.IsChecked)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedDate)
            </td>
            @if (item.IsChecked)
            {
                if (item.Title == "Nowy dokument")
                {
                    <td>
                        Potwierdzono!
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Check" asp-route-id="@item.Id">Nieprzyczytane</a>
                    </td>
                }
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            }

        </tr>
            }

        }
    </tbody>
</table>
