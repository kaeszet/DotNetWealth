@model DotNetWMS.Models.Location

@{
    ViewData["Title"] = "Delete";
}


<h3 class="text-danger">Czy na pewno chcesz wykonać to polecenie?</h3>
<div>
    <h2>Usuwanie magazynu</h2>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Usuń</button>
    </form>
    <hr />
    <dl class="row  details-view">
        <dt class="col-sm-2 list-group-item">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
    </dl>

</div>
<a asp-action="Index" class="btn btn-outline-dark"><i class="fas fa-arrow-left"></i>Wróć do podglądu</a>
